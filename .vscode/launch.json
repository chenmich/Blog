{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Flask",
        "type": "python",
        "request": "launch",
        "stopOnEntry": false,
        "pythonPath": "${config:python.pythonPath}",
        "program":"home/development/Blog/venv/bin/flask",
        "module": "flask.cli",
        "cwd": "${workspaceRoot}",
        "env": {
          "FLASK_APP": "run_blog.py",
          "LC_ALL": "en_US.utf-8",
          "LANG": "en_US.utf-8"
        },
        "args": [
          "run",
          "--no-debugger",
          "--no-reload"
        ],
        "envFile": "${workspaceRoot}/.env",
        "debugOptions": [
          "WaitOnAbnormalExit",
          "WaitOnNormalExit",
          "RedirectOutput"
        ]
      }
    ]
  }